<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0d47a1</item>
        <item name="colorPrimaryDark">#64b5f6</item>
        <item name="colorAccent">#1976d2</item>
    </style>

    <!-- EditText style.  -->
    <style name="UserName" parent="UserName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#1e88e5</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#e3f2fd</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- TextView for points counter. -->
    <style name="TextViewPointsCounter" parent="TextViewPointsCounter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#0d47a1</item>
        <item name="android:textSize">56sp</item>
    </style>

    <!-- ImageButton style. -->
    <style name="ImageSmileyButton" parent="ImageSmileyButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Button style. -->
<style name="ButtonStyle" parent="ButtonStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">#64b5f6</item>
    <item name="android:layout_marginLeft">@dimen/marginLeft</item>
    <item name="android:layout_marginRight">@dimen/marginRight</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:layout_marginTop">8dp</item>
</style>


</resources>
